            var canvas, ctx;


            $("#pagerefresh").click(function () {
                window.location.href = "verify";
            });


            var videoId = 'video';
            var scaleFactor = 1;
            var snapshots = [];

            function capture(video, scaleFactor) {
                if (scaleFactor == null) {
                    scaleFactor = 1;
                }
                var w = video.videoWidth * scaleFactor;
                var h = video.videoHeight * scaleFactor;
                var canvas = document.createElement('canvas');
                canvas.width = w;
                canvas.height = h;
                var ctx = canvas.getContext('2d');

                ctx.drawImage(video, 0, 0, w, h);
                return canvas;
            }


            $("#snap_btn").click(function (e) {
                if ($('#check_id').is(":checked")) {
                    var check = "Yes";
                }
                else {
                    var check = "No";
                }

                e.preventDefault();
                $('#snap_btn').button('loading');
                var random_gesture = $("#random_name").val();

                var canvas = capture(video, scaleFactor);
                var blobData = canvas.toDataURL();

                var image = canvas.toDataURL('image/png');
                var resultimg = image;
                var ImageSave = image.replace("data:image/png;base64,", "");
                var image = JSON.stringify({ data: ImageSave, check: check, random_gesture: random_gesture });

                console.log(check);
                //console.log(image);

                $.ajax({
                    type: "POST",
                    contentType: "application/json",
                    datatype: "json",
                    data: image,
                    url: "/Home/VerifyAPI/",
                    success: function (data) {
                        console.log(data);
                        if (data.Result == "Success")
                        {
                            $("#person_result").html(data.VerifiedName);
                        }
                        else {
                            //console.log(data.Result);
                            $("#errmsg").html(data.VerifiedName);
                            $('#alert_popup').modal('show');
                        }
                        $('#snap_btn').button('reset');
                    }
                });



                snapshots.unshift(canvas);
            });
        });




