        var canvas, ctx;
        canvas = document.getElementById("myCanvas");
        navigator.getUserMedia = (navigator.getUserMedia ||
            navigator.webkitGetUserMedia ||
            navigator.mozGetUserMedia ||
            navigator.msGetUserMedia
        );
        var video;
        var webcamStream; 1
        if (navigator.getUserMedia)
        {
            navigator.getUserMedia(
                // constraints
                {
                    video: true,
                    audio: false
                },
                // successCallback
                function (localMediaStream)
                {
                    video = document.querySelector('video');
                    if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
                        // Not adding `{ audio: true }` since we only want video now
                        navigator.mediaDevices.getUserMedia({ video: true }).then(function (stream) {
                            video.srcObject = stream;
                            video.play();
                        });
                    }
                },
                // errorCallback
                function (err) {
                    console.log("The following error occured: " + err);
                }
            );
        } else {
            console.log("getUserMedia not supported");
        }
        $('#on_off_btn').click(function () {
            if ($('#on_off_btn').prop("checked") == true) {
                $('#local_div').hide();
                $('#camera_div').show();
            }
            else {
                $('#local_div').show();
                $('#camera_div').hide();
            }
        });

        // Take SnapShot Function
        //Live Stream
        $('#snap_btn').click(function ()
        {
            $('#camera_output').html("");
            $('#snap_btn').button('loading');
            canvas = document.getElementById("myCanvas");
            var context = canvas.getContext('2d');
            context.drawImage(video, 0, 0, 150, 150);
            var imagedata = canvas.toDataURL('image/png');

            var img_64_array = imagedata.split(',');

            canvas.setAttribute('src', imagedata);

            var ImageBase64 = img_64_array[1];
            var JsonImage = JSON.stringify({ data: ImageBase64, flag:false});

            $.ajax({
                type: "POST",
                contentType: "application/json",
                datatype: "json",
                data: JsonImage,
                url: "/Home/DocumentVerification",
                success: function (data)
                {
                    if (data.Error == "")
                    {
                        $('#camera_output').html("Result: " + data.Summary);
                        $('#snap_btn').button('reset');
                    }
                    else
                    {
                        $('#camera_output').html("Result: " + data.Error);
                        $('#snap_btn').button('reset');
                    }
                }
            });
        });

        // Browse Image
        $(function ()
        {
            $(":file").change(function ()
            {
                $('#open_image_trigger').button('loading');
                //$('#local_output').html("");
                if (this.files && this.files[0])
                {
                    var reader = new FileReader();
                    reader.onload = imageIsLoaded;
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });


        //Browse
        function imageIsLoaded(e)
        {
            var img_src_64 = e.target.result;
            var img_64_array = img_src_64.split(',');
            var img_extension = img_64_array[0];
            if (img_extension == "data:image/png;base64" || img_extension == "data:image/PNG;base64" || img_extension == "data:image/jpeg;base64" || img_extension == "data:image/JPEG;base64" || img_extension == "data:image/jpg;base64" || img_extension == "data:image/JPG;base64")
            {
                $('#local_img').attr('src', e.target.result);
                $('#warn_msg').hide();
                $('#image_url_msg').hide();
                var ImageBase64 = img_src_64.replace(img_extension+",", "");
            }
            else
            {
                $('#image_url_msg').hide();
                $('#warn_msg').show();
            }

            if ($('#warn_msg').is(":hidden"))
            {
                var JsonImage = JSON.stringify({ data: ImageBase64 });
                $.ajax({
                    type: "POST",
                    contentType: "application/json",
                    datatype: "json",
                    data: JsonImage,
                    url: "/Home/DocumentVerification",
                    success: function (data)
                    {
                        if (data.Error == "")
                        {
                            $('#contract_date').html(data.Contract_Date);
                            $('#vendor_name').html(data.Vendor_Name);
                            $('#client_name').html(data.Client_Name);
                            $('#service_description').html(data.Service_Description);
                            $('#contract_value').html(data.Contract_Value);
                            $('#end_date').html(data.End_Date);
                            $('#penalty_value').html(data.Penalty_Value);
                            $('#jurisdiction_place').html(data.Jurisdiction_Place);
                            $('#vendor_email').html(data.Vendor_Email);
                            $('#vendor_phone').html(data.Vendor_Phone);
                            $('#client_email').html(data.Client_Email);
                            $('#client_phone').html(data.Client_Phone);
                            $('#local_output').show();

                            $('#open_image_trigger').button('reset');
                        }
                        elses
                        {
                            $('#local_output').html("Result: " + data.Error);
                            $('#open_image_trigger').button('reset');
                        }
                    }
                });
            }
            else {
                $('#image_url_msg').hide();
            }
        };


        //Image URL
        $('#image_submit').click(function ()
        {

            $('#local_output').html("");
            var image_url = $('#image_url').val();
            if (image_url == "")
            {
                $('#image_url_msg').show();
                $('#warn_msg').hide();
            }
            else
            {
                $('#image_submit').button('loading');
                $('#image_url_msg').hide();
                $('#local_img').attr('src', image_url);

                var JsonImage = JSON.stringify({ data: image_url, flag: true});
                $.ajax({
                    type: "POST",
                    contentType: "application/json",
                    datatype: "json",
                    data: JsonImage,
                    url: "/Home/DocumentVerification",
                    success: function (data)
                    {
                        if (data.Error == "")
                        {
                            $('#local_output').html("Result: " + data.Summary);
                            $('#image_submit').button('reset');
                        }
                        else
                        {
                            $('#local_output').html("Result: " + data.Error);
                            $('#image_submit').button('reset');
                        }
                    }
                });
            }
        });

